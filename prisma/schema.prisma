// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Entry {
  id          Int       @id @default(autoincrement())
  email       String
  name        String    @unique
  message     String
  guestbookId Int
  guestbook   Guestbook @relation(fields: [guestbookId], references: [id])
}

model Guestbook {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  email   String
  entries Entry[]
}
